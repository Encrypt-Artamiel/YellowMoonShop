<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>longbnh.filter.FilterDispatcher</filter-class>
    </filter>
    <filter>
        <filter-name>AdminAuthenticationFilter</filter-name>
        <filter-class>longbnh.filter.AdminAuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoadDataFilter</filter-name>
        <filter-class>longbnh.filter.LoadDataFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UserAuthenticationFilter</filter-name>
        <filter-class>longbnh.filter.UserAuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAuthenticationFilter</filter-name>
        <url-pattern>/createcake.jsp</url-pattern>
        <url-pattern>/adminpage.jsp</url-pattern>
        <url-pattern>/viewcake.jsp</url-pattern>
        <url-pattern>/update.jsp</url-pattern>
        <url-pattern>/CreateCakeServlet</url-pattern>
        <url-pattern>/LoadUpdateListServlet</url-pattern>
        <url-pattern>/UpdateCakeServlet</url-pattern>
        <url-pattern>/ViewCakeServlet</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoadDataFilter</filter-name>
        <url-pattern>/search.jsp</url-pattern>
        <url-pattern>/viewcake.jsp</url-pattern>
        <url-pattern>/createcake.jsp</url-pattern>
        <url-pattern>/viewcart.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserAuthenticationFilter</filter-name>
        <url-pattern>/viewcart.jsp</url-pattern>
        <url-pattern>/tracking.jsp</url-pattern>
        <url-pattern>/AddToCartServlet</url-pattern>
        <url-pattern>/CheckOutServlet</url-pattern>
        <url-pattern>/RemoveCakeFromCartServlet</url-pattern>
        <url-pattern>/TrackingServlet</url-pattern>
        <url-pattern>/UpdateCartServlet</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>longbnh.listener.ServletContextListener</listener-class>
    </listener>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>ym</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
</web-app>
